rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User data is private to the user
    // Note: The application primarily uses server-side logic (Admin SDK), 
    // but these rules ensure any client-side access is securely scoped.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Match any sub-collections used in the future
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
